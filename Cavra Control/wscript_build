#!/usr/bin/env python
# encoding: utf-8
# Copyright (c) 2012 SjB <steve@nca.uwo.ca>. All Rights Reserved.

from waflib import Utils

srcs = [
    'Properties/AssemblyInfo.cs',
    'Program.cs',
    'MacroFunctionality.cs',
    'IPlayer.cs',
    'GstPlayer.cs'
]

external_libs = [
    'Eto',
    'Eto.Platform'
]

images = [
    '../Resources/leftmute.png,Cavra_Control.leftmute.png',
    '../Resources/leftsoundon.png,Cavra_Control.leftsoundon.png',
    '../Resources/rightmute.png,Cavra_Control.rightmute.png',
    '../Resources/rightsoundon.png,Cavra_Control.rightsoundon.png',
    '../Resources/leftsoundmediumon.png,Cavra_Control.leftsoundmediumon.png',
    '../Resources/playicon.png,Cavra_Control.playicon.png',
    '../Resources/rightsoundmediumon.png,Cavra_Control.rightsoundmediumon.png',
    '../Resources/stopicon.png,Cavra_Control.stopicon.png'
]

[bld.read_assembly(x, install_path = bld.env.default_app_install_path) for x in external_libs]

uselib = ['NCA.CavraDriver', 'SjB.Hid', 'gstreamer-sharp-0.10']
uselib.extend(external_libs)

if 'linux' == Utils.unversioned_sys_platform():
    bld.install_native_lib(bld.env.default_app_install_path, ['libhid-cli.so'], 'SjB.Hid')

bld(features='subst',
    source='CavraControl.in',
    target='CavraControl',
    install_path = '${PREFIX}/bin',
    chmod = Utils.O755,
    EXTRA_LIBDIRS = '/usr/lib/cli/gstreamer-sharp-0.9',
    APPNAME = bld.env.APPNAME)

bld(
    features = 'cs cs_dev',
    source = srcs,
    install_path = bld.env.default_app_install_path,
    gen = '{0}.exe'.format(bld.env.APPNAME),
    resources = images,
    type = 'exe',
    use = uselib
)
